{
  "name": "postmaker",
  "version": "1.0.0",
  "main": "dist/index.js",
  "module": "src/index.js",
  "author": "Tom Scott <postmaker@psychedeli.ca> (https://psychedeli.ca)",
  "license": "MIT",
  "homepage": "https://github.com/tubbo/postmaker",
  "bugs": "https://github.com/tubbo/postmaker/issues",
  "keywords": ["markdown", "static", "blogging", "gatsby", "jekyll"],
  "description": "Standalone article generator for self-hosted, flat file blogs",
  "dependencies": {
    "js-yaml": "^3.11.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.1",
    "optimist": "^0.6.1",
    "parameterize": "^0.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "jest": "^22.4.3",
    "rimraf": "^2.6.2"
  },
  "bin": {
    "postmaker": "./bin/postmaker"
  },
  "scripts": {
    "build": "babel src -d lib -D",
    "test": "jest",
    "lint": "eslint"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "<rootDir>/test/**/*-test.js"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "env": {
      "presets": [
        [
          "es2015",
          {
            "modules": false
          }
        ]
      ],
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  }
}
