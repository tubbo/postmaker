{
  "name": "postmaker",
  "version": "1.0.0",
  "main": "lib/index.js",
  "module": "src/index.js",
  "author": "Tom Scott <postmaker@psychedeli.ca> (https://psychedeli.ca)",
  "license": "MIT",
  "homepage": "https://github.com/tubbo/postmaker",
  "bugs": "https://github.com/tubbo/postmaker/issues",
  "keywords": [
    "markdown",
    "static",
    "blogging",
    "gatsby",
    "jekyll"
  ],
  "description": "Standalone article generator for self-hosted, flat file blogs",
  "dependencies": {
    "js-yaml": "^3.11.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.1",
    "optimist": "^0.6.1",
    "parameterize": "^0.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-env": "^1.7.0",
    "jest": "^22.4.3",
    "jsdoc": "^3.5.5",
    "jsdoc-template": "^1.2.0",
    "rimraf": "^2.6.2"
  },
  "bin": {
    "postmaker": "./bin/postmaker"
  },
  "scripts": {
    "clean": "rm -rf lib tmp/**/* doc",
    "build": "babel src -d lib -D && echo \"\nmodule.exports = exports.default\" >> lib/index.js",
    "test": "jest",
    "lint": "eslint src",
    "docs": "rm -rf doc && jsdoc ./README.md ./package.json ./src -d doc"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "<rootDir>/test/**/*-test.js"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ]
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs",
      "add-module-exports"
    ],
    "env": {
      "presets": [
        [
          "es2015",
          {
            "modules": false
          }
        ]
      ]
    }
  }
}
